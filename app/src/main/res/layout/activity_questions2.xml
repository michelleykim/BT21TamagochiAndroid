<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp"
    tools:context=".Questions2"
    android:id="@+id/questions2"
    >

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/press_start_2p"
        android:text="Maybe you could \ndo something \nto make the egg \nfeel more comfortable. \n \nWhat music would you \nplay to the egg?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"

        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/groovyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Groovy, comforting music"
        android:textColor="#000000" />

    <Button
        android:id="@+id/trendyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groovyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Energetic, trendy music"
        android:textColor="#000000" />

    <Button
        android:id="@+id/hipHopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trendyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Hip Hop with strong bass"
        android:textColor="#000000" />

</RelativeLayout>