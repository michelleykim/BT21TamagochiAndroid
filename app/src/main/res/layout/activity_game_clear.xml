<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameClear"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp"
    android:background="@drawable/tile"
    android:id="@+id/gameClear"
    android:screenOrientation="portrait"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/press_start_2p"
        android:text="Baby BT21 has fully grown!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/bt21"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/rj1"
        android:layout_above="@+id/thanks"
        android:layout_below="@+id/title"
        />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/press_start_2p"
        android:text="Thanks for playing!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_above="@+id/toMainButton"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/toMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        android:fontFamily="@font/press_start_2p"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>